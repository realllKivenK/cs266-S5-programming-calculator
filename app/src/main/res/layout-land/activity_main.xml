<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display -->
    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:columnCount="1"
            android:rowCount="5">

            <Button
                android:id="@+id/button_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/power"
                android:backgroundTint="@color/design_default_color_primary_variant"/>


            <!--        1-->
            <Button
                android:id="@+id/button_binary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/binary"
                android:backgroundTint="@color/design_default_color_primary_variant"/>


            <!--        2-->
            <Button
                android:id="@+id/button_Octal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/octal"
                android:backgroundTint="@color/design_default_color_primary_variant"/>


            <!--        3-->
            <Button
                android:id="@+id/button_Hex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hexadecimal"
                android:backgroundTint="@color/design_default_color_primary_variant"/>


            <!--        4-->
            <Button
                android:id="@+id/button_ASCII"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ascit"
                android:backgroundTint="@color/design_default_color_primary_variant"/>


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|end"
            android:layout_marginStart="90dp"
            android:columnCount="4"
            android:rowCount="5">

            <!-- First Row -->
            <Button
                android:id="@+id/button_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/red"
                android:text="@string/clear" />

            <Button
                android:id="@+id/button_open_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/gray"
                android:text="@string/openBacket" />

            <Button
                android:id="@+id/button_close_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/gray"
                android:text="@string/closeBacket" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/orange"
                android:text="@string/div" />

            <!-- Second Row -->
            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/seven" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/eight" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/nine" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/orange"
                android:text="@string/muti" />

            <!-- Third Row -->
            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/four" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/five" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/six" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/orange"
                android:text="@string/minut" />

            <!-- Fourth Row -->
            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/one" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/two" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/three" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/orange"
                android:text="@string/plus" />

            <!-- Fifth Row -->
            <Button
                android:id="@+id/button_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/red"
                android:text="@string/AllClar" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/zero" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/mint"
                android:text="@string/dot" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/orange"
                android:text="@string/eq" />
        </GridLayout>

    </LinearLayout>


</LinearLayout>
